{
  "name": "stackkit-cli",
  "version": "0.4.0",
  "description": "CLI for StackKit - Production-ready project generator and module system",
  "main": "dist/index.js",
  "bin": {
    "stackkit": "./bin/stackkit.js"
  },
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/tariqul420/stackkit.git",
    "directory": "apps/stackkit-cli"
  },
  "homepage": "https://github.com/tariqul420/stackkit#readme",
  "bugs": {
    "url": "https://github.com/tariqul420/stackkit/issues"
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "npm run clean && tsc && npm run copy-assets",
    "copy-assets": "cp -r ../../templates . && cp -r ../../modules .",
    "clean": "rm -rf dist templates modules",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cli",
    "generator",
    "nextjs",
    "template"
  ],
  "files": [
    "dist",
    "bin",
    "templates",
    "modules"
  ],
  "author": "Tariqul Islam",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.0.0",
    "inquirer": "^9.2.12",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "fs-extra": "^11.2.0",
    "execa": "^5.1.1",
    "validate-npm-package-name": "^5.0.0",
    "detect-package-manager": "^3.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.0",
    "@types/validate-npm-package-name": "^4.0.2",
    "typescript": "^5.3.3"
  }
}