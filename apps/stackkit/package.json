{
  "name": "stackkit",
  "version": "0.2.6",
  "description": "Production-ready CLI to create and extend JavaScript or TypeScript apps with modular stacks.",
  "main": "dist/index.js",
  "bin": {
    "stackkit": "bin/stackkit.js"
  },
  "type": "commonjs",
  "files": [
    "dist",
    "bin",
    "templates",
    "modules"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tariqul420/stackkit.git",
    "directory": "apps/stackkit"
  },
  "homepage": "https://stackkit.tariqul.dev",
  "bugs": {
    "url": "https://github.com/tariqul420/stackkit/issues"
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "npm run clean && tsc && npm run copy-assets",
    "copy-assets": "node ./scripts/copy-assets.js",
    "clean": "node ./scripts/clean.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "stackkit",
    "cli",
    "project-generator",
    "scaffold",
    "boilerplate",
    "javascript",
    "typescript",
    "nextjs",
    "react",
    "vite",
    "express",
    "prisma",
    "mongoose",
    "mongodb",
    "postgresql",
    "authentication"
  ],
  "author": "Tariqul Islam",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "detect-package-manager": "^3.0.1",
    "execa": "^5.1.1",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.3.8",
    "ora": "^5.4.1",
    "validate-npm-package-name": "^5.0.1",
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "recast": "^0.20.5",
    "@babel/parser": "^7.28.5",
    "@babel/plugin-transform-typescript": "^7.28.5",
    "@babel/plugin-transform-react-jsx": "^7.27.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^25.0.8",
    "@types/validate-npm-package-name": "^4.0.2",
    "typescript": "^5.3.3"
  }
}
