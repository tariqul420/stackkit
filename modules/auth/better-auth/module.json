{
  "name": "better-auth",
  "displayName": "Better Auth",
  "description": "Modern authentication with Better Auth",
  "category": "auth",
  "provider": "better-auth",
  "supportedFrameworks": ["nextjs", "express", "react-vite"],
  "databaseAdapters": {
    "prisma-postgresql": {
      "adapterCode": "database: prismaAdapter(prisma, {\n    provider: \"postgresql\",\n  }),",
      "schema": "files/schemas/prisma-schema.prisma",
      "schemaDestination": "prisma/schema.prisma",
      "dependencies": {
        "better-auth": "^1.1.4"
      }
    },
    "prisma-mongodb": {
      "adapterCode": "database: prismaAdapter(prisma, {\n    provider: \"mongodb\",\n  }),",
      "schema": "files/schemas/prisma-schema.prisma",
      "schemaDestination": "prisma/schema.prisma",
      "dependencies": {
        "better-auth": "^1.1.4"
      }
    },
    "mongoose-mongodb": {
      "adapterCode": "database: mongodbAdapter(db),",
      "dependencies": {
        "better-auth": "^1.1.4",
        "mongodb": "^6.10.0"
      }
    }
  },
  "envVars": [
    {
      "key": "BETTER_AUTH_SECRET",
      "value": "",
      "description": "Secret key for Better Auth. Generate with: openssl rand -base64 32",
      "required": true
    },
    {
      "key": "BETTER_AUTH_URL",
      "value": "http://localhost:3000",
      "description": "Base URL of your application (change in production)",
      "required": true
    }
  ],
  "patches": [
    {
      "type": "create-file",
      "description": "{{authDescription}}",
      "source": "lib/{{authFile}}",
      "destination": "{{lib}}/{{authFile}}"
    }
  ]
}
