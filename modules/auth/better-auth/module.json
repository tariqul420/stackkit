{
  "name": "better-auth",
  "displayName": "Better Auth",
  "description": "Modern authentication with Better Auth",
  "category": "auth",
  "provider": "better-auth",
  "supportedFrameworks": ["nextjs", "express", "react-vite"],
  "compatibility": {
    "frameworks": ["nextjs", "express", "react-vite"],
    "databases": ["prisma", "mongoose"],
    "languages": ["typescript", "javascript"],
    "packageManagers": ["npm", "yarn", "pnpm", "bun"]
  },
  "databaseAdapters": {
    "prisma-postgresql": {
      "dependencies": {
        "@prisma/adapter-pg": "^5.0.0",
        "pg": "^8.0.0"
      }
    },
    "prisma-mongodb": {
      "dependencies": {}
    },
    "prisma-mysql": {
      "dependencies": {
        "@prisma/adapter-mariadb": "^5.0.0",
        "mysql2": "^3.0.0"
      }
    },
    "prisma-sqlite": {
      "dependencies": {
        "@prisma/adapter-better-sqlite3": "^5.0.0",
        "better-sqlite3": "^9.0.0"
      }
    }
  }
}
