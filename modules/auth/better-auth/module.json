{
  "name": "better-auth",
  "displayName": "Better Auth",
  "description": "Modern authentication with Better Auth",
  "category": "auth",
  "provider": "better-auth",
  "supportedFrameworks": ["nextjs", "express", "react-vite"],
  "databaseAdapters": {
    "prisma-postgresql": {
      "adapterCode": "database: prismaAdapter(prisma, {\n    provider: \"postgresql\",\n  }),",
      "schema": "files/schemas/prisma-schema.prisma",
      "schemaDestination": "prisma/schema.prisma",
      "dependencies": {
        "better-auth": "^1.1.4"
      }
    },
    "prisma-mongodb": {
      "adapterCode": "database: prismaAdapter(prisma, {\n    provider: \"mongodb\",\n  }),",
      "schema": "files/schemas/prisma-schema.prisma",
      "schemaDestination": "prisma/schema.prisma",
      "dependencies": {
        "better-auth": "^1.1.4"
      }
    },
    "mongoose-mongodb": {
      "adapterCode": "database: mongodbAdapter(db),",
      "dependencies": {
        "better-auth": "^1.1.4",
        "mongodb": "^6.10.0"
      }
    }
  },
  "envVars": [
    {
      "key": "BETTER_AUTH_SECRET",
      "value": "",
      "description": "Secret key for Better Auth. Generate with: openssl rand -base64 32",
      "required": true
    },
    {
      "key": "BETTER_AUTH_URL",
      "value": "http://localhost:3000",
      "description": "Base URL of your application (change in production)",
      "required": true
    }
  ],
  "frameworkConfigs": {
    "nextjs": {
      "patches": [
        {
          "type": "create-file",
          "description": "{{authDescription}}",
          "source": "lib/{{authFile}}",
          "destination": "{{lib}}/{{authFile}}"
        },
        {
          "type": "create-file",
          "description": "Create Better Auth API routes",
          "source": "api/auth/[...all]/route.ts",
          "destination": "app/api/auth/[...all]/route.ts"
        }
      ]
    },
    "express": {
      "patches": [
        {
          "type": "create-file",
          "description": "{{authDescription}}",
          "source": "lib/{{authFile}}",
          "destination": "{{lib}}/{{authFile}}"
        },
        {
          "type": "patch-file",
          "description": "Add Better Auth routes to Express app",
          "file": "src/app.ts",
          "operations": [
            {
              "type": "add-import",
              "imports": [
                "import { auth } from \"@/lib/auth\";",
                "import { toNodeHandler } from \"better-auth/node\";"
              ]
            },
            {
              "type": "add-code",
              "after": "// routes",
              "code": "\napp.all(\"/api/auth/*splat\", toNodeHandler(auth));"
            }
          ]
        }
      ]
    },
    "react-vite": {
      "patches": [
        {
          "type": "create-file",
          "description": "{{authDescription}}",
          "source": "lib/{{authFile}}",
          "destination": "{{lib}}/{{authFile}}"
        }
      ]
    }
  }
}
