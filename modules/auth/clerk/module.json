{
  "name": "clerk",
  "displayName": "Clerk",
  "description": "Clerk Authentication",
  "category": "auth",
  "provider": "clerk",
  "supportedFrameworks": ["nextjs", "express", "react-vite"],
  "frameworkConfigs": {
    "nextjs": {
      "dependencies": {
        "@clerk/nextjs": "^6.10.2"
      },
      "envVars": [
        {
          "key": "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
          "value": "",
          "description": "Clerk publishable key (from Clerk dashboard)",
          "required": true
        },
        {
          "key": "CLERK_SECRET_KEY",
          "value": "",
          "description": "Clerk secret key (from Clerk dashboard)",
          "required": true
        },
        {
          "key": "NEXT_PUBLIC_CLERK_SIGN_IN_URL",
          "value": "/sign-in",
          "description": "Sign in page URL",
          "required": true
        },
        {
          "key": "NEXT_PUBLIC_CLERK_SIGN_UP_URL",
          "value": "/sign-up",
          "description": "Sign up page URL",
          "required": true
        },
        {
          "key": "NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL",
          "value": "/",
          "description": "Redirect URL after sign in",
          "required": true
        },
        {
          "key": "NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL",
          "value": "/",
          "description": "Redirect URL after sign up",
          "required": true
        }
      ],
      "patches": [
        {
          "type": "create-file",
          "description": "Create Clerk middleware",
          "source": "nextjs/middleware.ts",
          "destination": "middleware.ts"
        },
        {
          "type": "create-file",
          "description": "Update root layout to include Clerk provider",
          "source": "nextjs/layout.tsx",
          "destination": "app/layout.tsx"
        }
      ]
    },
    "express": {
      "dependencies": {
        "@clerk/express": "^1.3.0"
      },
      "envVars": [
        {
          "key": "CLERK_PUBLISHABLE_KEY",
          "value": "",
          "description": "Clerk publishable key (from Clerk dashboard)",
          "required": true
        },
        {
          "key": "CLERK_SECRET_KEY",
          "value": "",
          "description": "Clerk secret key (from Clerk dashboard)",
          "required": true
        }
      ],
      "patches": [
        {
          "type": "create-file",
          "description": "{{authDescription}}",
          "source": "express/{{authFile}}",
          "destination": "{{lib}}/{{authFile}}"
        }
      ]
    },
    "react-vite": {
      "dependencies": {
        "@clerk/clerk-react": "^5.15.0"
      },
      "envVars": [
        {
          "key": "VITE_CLERK_PUBLISHABLE_KEY",
          "value": "",
          "description": "Clerk publishable key (from Clerk dashboard)",
          "required": true
        }
      ],
      "patches": [
        {
          "type": "create-file",
          "description": "{{authDescription}}",
          "source": "react/{{authFile}}",
          "destination": "{{lib}}/{{authFile}}"
        }
      ]
    }
  }
}
