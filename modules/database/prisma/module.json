{
  "name": "prisma",
  "displayName": "Prisma",
  "description": "Prisma ORM",
  "category": "database",
  "provider": "prisma",
  "supportedFrameworks": ["nextjs", "express"],
  "compatibility": {
    "frameworks": ["nextjs", "express"],
    "databases": ["prisma"],
    "languages": ["typescript", "javascript"],
    "packageManagers": ["npm", "yarn", "pnpm", "bun"]
  },
  "databaseAdapters": {
    "providers": {
      "prisma-postgresql": {
        "dependencies": {
          "@prisma/adapter-pg": "^5.0.0",
          "pg": "^8.0.0"
        }
      },
      "prisma-mongodb": {
        "dependencies": {}
      },
      "prisma-mysql": {
        "dependencies": {
          "@prisma/adapter-mariadb": "^5.0.0",
          "mysql2": "^3.0.0"
        }
      },
      "prisma-sqlite": {
        "dependencies": {
          "@prisma/adapter-better-sqlite3": "^5.0.0",
          "better-sqlite3": "^9.0.0"
        }
      }
    }
  },
  "postInstall": [
    "npx prisma generate"
  ]
}
