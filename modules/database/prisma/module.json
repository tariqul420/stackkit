{
  "name": "prisma",
  "displayName": "Prisma",
  "description": "Prisma ORM",
  "category": "database",
  "provider": "prisma",
  "supportedFrameworks": ["nextjs", "express"],
  "dependencies": {
    "common": {
      "@prisma/client": "^7.2.0",
      "dotenv": "^17.2.3"
    },
    "providers": {
      "postgresql": {
        "@prisma/adapter-pg": "^7.2.0",
        "pg": "^8.16.3"
      },
      "mongodb": {
        "@prisma/client": "6.19"
      },
      "mysql": {
        "@prisma/adapter-mariadb": "^7.2.0"
      },
      "sqlite": {
        "@prisma/adapter-better-sqlite3": "^7.2.0"
      }
    }
  },
  "devDependencies": {
    "common": {
      "prisma": "^7.2.0",
      "tsx": "^4.21.0"
    },
    "providers": {
      "postgresql": {
        "@types/pg": "^8.16.0"
      },
      "mongodb": {
        "prisma": "6.19"
      },
      "mysql": {},
      "sqlite": {
        "@types/better-sqlite3": "^7.6.13"
      }
    }
  },
  "envVars": {
    "common": [
      {
        "key": "DATABASE_URL",
        "value": "{{connectionString}}",
        "description": "Database connection URL",
        "required": true
      }
    ],
    "providers": {
      "mysql": [
        {
          "key": "DATABASE_HOST",
          "value": "localhost",
          "description": "MySQL host",
          "required": true
        },
        {
          "key": "DATABASE_USER",
          "value": "",
          "description": "MySQL username",
          "required": true
        },
        {
          "key": "DATABASE_PASSWORD",
          "value": "",
          "description": "MySQL password",
          "required": true
        },
        {
          "key": "DATABASE_NAME",
          "value": "mydb",
          "description": "MySQL database name",
          "required": true
        },
        {
          "key": "DATABASE_PORT",
          "value": "3306",
          "description": "MySQL port",
          "required": false
        }
      ]
    }
  },
  "frameworkPatches": {
    "express": {
      "tsconfig.json": {
        "merge": {
          "compilerOptions": {
            "baseUrl": ".",
            "paths": {
              "@/*": ["./*"]
            }
          },
          "include": ["src/**/*", "lib/**/*"],
          "exclude": ["node_modules", "dist", "lib/generated/prisma"]
        }
      }
    }
  },
  "patches": [
    {
      "type": "create-file",
      "description": "Create Prisma schema",
      "source": "prisma/schema.prisma",
      "destination": "prisma/schema.prisma"
    },
    {
      "type": "create-file",
      "description": "Create Prisma config",
      "source": "prisma.config.ts",
      "destination": "prisma.config.ts"
    },
    {
      "type": "create-file",
      "description": "{{dbDescription}}",
      "source": "lib/{{dbFile}}",
      "destination": "{{lib}}/{{dbFile}}"
    }
  ],
  "postInstall": ["npx prisma generate"]
}
