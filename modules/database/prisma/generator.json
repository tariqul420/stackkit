{
  "name": "prisma",
  "type": "database",
  "priority": 5,
  "operations": [
    {
      "type": "create-file",
      "source": "prisma/schema.prisma",
      "destination": "prisma/schema.prisma"
    },
    {
      "type": "create-file",
      "source": "prisma.config.ts",
      "destination": "prisma.config.ts"
    },
    {
      "type": "create-file",
      "source": "lib/prisma.ts",
      "destination": "lib/prisma.ts"
    },
    {
      "type": "add-dependency",
      "condition": { "prismaProvider": "postgresql" },
      "dependencies": {
        "@prisma/adapter-pg": "^5.0.0",
        "@prisma/client": "^7.2.0",
        "pg": "^8.0.0"
      },
      "devDependencies": {
        "prisma": "^7.2.0"
      }
    },
    {
      "type": "add-dependency",
      "condition": { "prismaProvider": "mysql" },
      "dependencies": {
        "@prisma/adapter-mariadb": "^5.0.0",
        "@prisma/client": "^7.2.0",
        "mysql2": "^3.0.0"
      },
      "devDependencies": {
        "prisma": "^7.2.0"
      }
    },
    {
      "type": "add-dependency",
      "condition": { "prismaProvider": "sqlite" },
      "dependencies": {
        "@prisma/adapter-better-sqlite3": "^5.0.0",
        "@prisma/client": "^7.2.0",
        "better-sqlite3": "^9.0.0"
      },
      "devDependencies": {
        "prisma": "^7.2.0"
      }
    },
    {
      "type": "add-dependency",
      "condition": { "prismaProvider": "mongodb" },
      "dependencies": {
        "@prisma/client": "^6.19.0"
      },
      "devDependencies": {
        "prisma": "^6.19.0"
      }
    }
  ],
  "dependencies": {
    "dotenv": "^17.2.3"
  },
  "devDependencies": {},
  "scripts": {
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:migrate": "npx prisma migrate dev",
    "db:studio": "npx prisma studio"
  },
  "envVars": {
    "DATABASE_URL": "postgresql://username:password@localhost:5432/database_name"
  }
}