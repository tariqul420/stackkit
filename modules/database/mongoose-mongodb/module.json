{
  "name": "mongoose-mongodb",
  "displayName": "Mongoose + MongoDB",
  "description": "Mongoose ODM for MongoDB",
  "category": "database",
  "dependencies": {
    "mongoose": "^8.8.4"
  },
  "envVars": [
    {
      "key": "MONGODB_URI",
      "value": "mongodb://localhost:27017/myapp",
      "description": "MongoDB connection string",
      "required": true
    }
  ],
  "frameworkPatches": {
    "express": {
      "tsconfig.json": {
        "merge": {
          "compilerOptions": {
            "paths": {
              "@/*": ["./src/*"],
              "@/models/*": ["./src/models/*"]
            }
          },
          "include": ["src/**/*", "src/models/**/*"]
        }
      }
    },
    "nextjs": {
      "tsconfig.json": {
        "merge": {
          "compilerOptions": {
            "paths": {
              "@/models/*": ["./models/*"]
            }
          }
        }
      }
    }
  },
  "patches": [
    {
      "type": "create-file",
      "description": "MongoDB connection with Mongoose",
      "source": "lib/db.ts",
      "destination": "{{lib}}/db.ts"
    }
  ]
}
